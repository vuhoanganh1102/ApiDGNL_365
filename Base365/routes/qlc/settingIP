const router = require('express').Router();
const controller = require('../../controllers/qlc/settingIP')
const formData = require('express-form-data')

router.get("/" ,controller.getListIP);

router.post("/:id",formData.parse(),controller.getListByID)

router.post("/",formData.parse(),controller.createIP)

router.post("/:id",formData.parse(),controller.editsettingIP)

//API xóa cài đạt ip theo Id
router.delete("/:id",formData.parse(), controller.deleteSetIpByID)

//API xóa toàn bộ cài đạt ip của một công ty
router.delete("/all/company",formData.parse(), controller.deleteSetIpCompany)

//API xóa toàn bộ cài đạt ip đã có trong hệ thống
router.delete("/",formData.parse(), controller.deleteAllsetIp)

module.exports = router